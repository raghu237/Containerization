pipeline {
    agent any  // Runs on any available agent (your Jenkins server)

    environment {
        // ECR details (replace with yours)
        ECR_REGISTRY = '832959959228.dkr.ecr.us-east-1.amazonaws.com/java-app'
        ECR_REPOSITORY = 'java-app'
        IMAGE_TAG = "${BUILD_NUMBER}"  // Use Jenkins build number as tag
        AWS_REGION = 'us-east-1'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm  // Pulls from your Git repo
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the image locally on Jenkins
                    docker.build("${ECR_REGISTRY}/${ECR_REPOSITORY}:${IMAGE_TAG}")
                }
            }
        }

        stage('Auth to ECR') {
            steps {
                script {
                    // Use AWS Steps plugin to login
                    withAWS(credentials: 'aws-ecr-creds', region: "${AWS_REGION}") {
                        sh 'aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REGISTRY}'
                    }
                }
            }
        }

        stage('Push to ECR') {
            steps {
                script {
                    withAWS(credentials: 'aws-ecr-creds', region: "${AWS_REGION}") {
                        docker.withRegistry("https://${ECR_REGISTRY}", 'aws-ecr-creds') {
                            docker.image("${ECR_REGISTRY}/${ECR_REPOSITORY}:${IMAGE_TAG}").push()
                        }
                    }
                }
            }
        }

        stage('Cleanup') {
            steps {
                sh 'docker rmi ${ECR_REGISTRY}/${ECR_REPOSITORY}:${IMAGE_TAG}'  // Prune local image
            }
        }
    }

    post {
        always {
            cleanWs()  // Clean workspace
        }
        success {
            echo "Build ${IMAGE_TAG} pushed to ECR successfully!"
        }
        failure {
            echo "Build failed - check logs."
        }
    }
}
